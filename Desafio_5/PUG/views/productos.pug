html
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
        script(defear src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous")
        script(src="sweetalert2.all.min.js")
        link(rel="stylesheet" href="./index.css" type="text/css")
        title= titulo
    body
    -let prod = productos 
    if prod.length>0
        div(class="formContainer")
            table(class="table table-hover")
                thead
                    tr
                        th(scope="col")='ID'
                        th(scope="col")='Titulo'
                        th(scope="col")='Precio'
                        th(scope="col")='Imagen'
                tbody
                    each val in productos
                        tr 
                            th(scope="row")= val.id
                            td= val.Title 
                            td= val.Price 
                            td
                                img(src=val.Thumbnail, alt="Img de producto")
    else
        div(class="formContainer")
            h1="No se encontraron datos"
    a(href="/" class="btn btn-success ldp")="Formulario de carga"