<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script defear src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script src="sweetalert2.all.min.js"></script>
    <link rel="stylesheet" href="./index.css" type="text/css">
    <title><%- titulo %></title>
</head>
<body>

    <% if (productos.length>0) { %>
        <div class="formContainer">
            <table class="table table-hover">
                <thead>
                    <tr>            
                    <th scope="col">ID</th>
                    <th scope="col">Titulo</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                    </tr>
                </thead>
                <tbody>
                    <% productos.forEach((prod) => { %>
                        <tr>
                            <th scope="row"><%= prod.id %></th>
                            <td><%= prod.Title %></td>
                            <td><%= prod.Price %></td>
                            <td><img src="<%= prod.Thumbnail %>" alt="Img de producto"></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="formContainer">
        <h1>No se encontraron datos</h1>
        </div>
    <% } %>
    <a href="/" class="btn btn-success ldp">Formulario de carga</a>

</body>
</html>