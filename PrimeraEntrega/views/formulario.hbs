<div class="formContainer">
    <form onsubmit='return addProductos(this)' class="fontFamily">
        <h1>Formulario</h1>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" name="Title" id="Title" placeholder="name@example.com">
            <label for="Title" class="fontFamily">Title</label>
        </div>
        <div class="form-floating mb-3">
            <input type='number' class="form-control" name="Price" id="price" placeholder="Password">
            <label for="price" class="fontFamily">Price</label>
        </div>
        <div class="form-floating mb-3">
            <input type='url' class="form-control" name="Thumbnail" id="Thumbnail" placeholder="Password">
            <label for="Thumbnail" class="fontFamily">Thumbnail</label>
        </div>
        <button type="submit" class="btn btn-primary fontFamily">Ingreso de producto</button>
    </form>
</div>
<div class="formContainer" id="tableContainer">
</div>
<section class="formContainer">
    <h2>Centro de mensajes:</h2>
    <div id="mensajes" class="mensajesContainer"></div>
    <form onsubmit='return addMensajes(this)'>
        <div class="form-floating mb-2">
            <input type="email" class="form-control" name="Email" id="email">
            <label for="email" class="fontFamily">Email</label>
        </div>
         <div class="form-floating mb-2">
            <input name="msj" class="form-control fontFamily" id="msj" rows="2"></input>
            <label for="msj" class="form-label fontFamily">Mensaje</label>
        </div>
        <button type="submit" class="btn btn-primary fontFamily">Enviar</button>
    </form>

</section>