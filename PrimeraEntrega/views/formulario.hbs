<div class="formContainer">
    <form onsubmit='return addProductos(this)' class="fontFamily">
        <h1>Formulario</h1>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Password">
            <label for="nombre" class="fontFamily">Nombre</label>
        </div>
        <div class="form-floating mb-3">
            <input type="number" class="form-control" name="precio" id="precio" placeholder="Password">
            <label for="precio" class="fontFamily">Precio</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" name="descripcion" id="descripcion" placeholder="Password">
            <label for="descripcion" class="fontFamily">Descripcion</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" name="codigo" id="codigo" placeholder="Password">
            <label for="codigo" class="fontFamily">Codigo</label>
        </div>
        <div class="form-floating mb-3">
            <input type='number' class="form-control" name="stock" id="stock" placeholder="Password">
            <label for="stock" class="fontFamily">Stock</label>
        </div>
        <div class="form-floating mb-3">
            <input type='url' class="form-control" name="foto" id="foto" placeholder="Password">
            <label for="foto" class="fontFamily">Foto</label>
        </div>
        <button type="submit" class="btn btn-primary fontFamily">Ingreso de producto</button>
    </form>
</div>
<div class="formContainer" id="tableContainer">
</div>
<section class="formContainer">
    <h2>Centro de mensajes:</h2>
    <div id="mensajes" class="mensajesContainer"></div>
    <form onsubmit='return addMensajes(this)'>
        <div class="form-floating mb-2">
            <input type="email" class="form-control" name="Email" id="email">
            <label for="email" class="fontFamily">Email</label>
        </div>
         <div class="form-floating mb-2">
            <input name="msj" class="form-control fontFamily" id="msj" rows="2"></input>
            <label for="msj" class="form-label fontFamily">Mensaje</label>
        </div>
        <button type="submit" class="btn btn-primary fontFamily">Enviar</button>
    </form>

</section>